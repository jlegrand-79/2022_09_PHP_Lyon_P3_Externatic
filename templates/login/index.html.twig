{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	Se connecter
{% endblock %}

{% block styleBody %}class="background-login" style="background-image: url('{{ asset('build/images/Groupe105.png') }}')"
{% endblock %}

{% block body %}
	<main class="mainSection d-flex flex-column mb-5">
		{% for user, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ user }} text-center rounded-0">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
		<div class="w-100 mt-5 mb-5 animate__animated animate__fadeIn">
			<div class="loginForm m-auto">
				<h2 class="text-black mt-0 mb-4 text-center">Se connecter</h2>
				{% if error %}
					<div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<form action="{{ path('app_login') }}" method="post" class="d-flex flex-column">
					<label for="username">Mail</label>
					<input class='inputLoginForm p-1 mb-3' type="text" id="username" name="_username" value="{{ last_username }}" placeholder="bruce.banner@gmail.com">

					<label class="pt-2" for="password">Mot de passe</label>
					<input class='inputLoginForm p-1 mb-3' type="password" id="password" name="_password">

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<input type="hidden" name="_target_path" value="/login/redirect">
					<button>{{ button_label|default('Je me connecte') }}</button>
				</form>

				<p class="mb-0 mt-5 fw-bold text-center jost">Vous n'avez pas encore de compte ?</p>
				<p class="text-center">
					<a class="jost" href="{{ path('app_register') }}">S'inscrire</a>
				</p>

			</a>
		</p>
	</div>
</div></main>{% endblock %}
