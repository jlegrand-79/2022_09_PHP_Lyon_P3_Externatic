						</svg>
						<p class="d-flex align-items-center mb-0">
							{{ app.user.recruiter.address }}
							<br/>
							{% if app.user.recruiter.addressComplement is defined %}
								{{ app.user.recruiter.addressComplement }}
								<br/>
							{% endif %}
							{{ app.user.recruiter.postalCode }}
							{{ app.user.recruiter.city }}
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
