<div class="mb-3">
	<label class="form-label" for="recruiter_email">Email</label>
	<p>
		<a href="mailto:{{recruiter.user.email}}">{{recruiter.user.email}}</a>
	</p>
</div>
{{ form_start(form, {'attr': {'class': 'd-flex flex-column'}}) }}
{% if recruiter.partner is not null %}
	{{ form_row(form.partner, { value : recruiter.partner.id }) }}
{% else %}
	{{ form_row(form.partner) }}
{% endif %}
{{ form_row(form.firstname)}}
{{ form_row(form.lastname)}}
{{ form_row(form.position)}}
{{ form_row(form.phone)}}
{{ form_row(form.address)}}
{{ form_row(form.addressComplement)}}
{{ form_row(form.postalCode)}}
{{ form_row(form.city)}}

<button>{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
