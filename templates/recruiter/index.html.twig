{% extends 'base.html.twig' %}

{% block title %}Tous les recruteurs
{% endblock %}

{% block body %}
	<h1 class="text-center">Espace Admin</h1>

	<div class="all-links">
		<a href="{{ path('app_admin_register') }}" class="link-admin" role="button" aria-pressed="true">Ajouter un utilisateur
		</a>
	</div>

	<h2 class="text-center">Les recruteurs</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Mail</th>
			</tr>
		</thead>
		<tbody>
			{% for recruiter in recruiters %}
				<tr>
					<td>{{ recruiter.email }}</td>
					<td>
						<a href="{{ path('app_recruiter_show', {'id': recruiter.id}) }}">show</a>
						<a href="{{ path('app_recruiter_edit', {'id': recruiter.id}) }}">edit</a>
						<a href="{{ path('app_recruiter_admin_new', {'id': recruiter.id}) }}">edit</a>
					</td>
				</tr>
				{% if recruiter.firstname is defined %}
					<div class="col-2 col-md-1 d-flex flex-row align-items-center p-0">
						<div class="pink-circle">
							<a href="{{ path('app_recruiter_edit', {'id': recruiter.id }) }}">
								<svg xmlns="http://www.w3.org/2000/svg" class="logo-admin bi bi-vector-pen" viewbox="0 0 16 16">
									<path fill-rule="evenodd" d="M10.646.646a.5.5 0 0 1 .708 0l4 4a.5.5 0 0 1 0 .708l-1.902 1.902-.829 3.313a1.5 1.5 0 0 1-1.024 1.073L1.254 14.746 4.358 4.4A1.5 1.5 0 0 1 5.43 3.377l3.313-.828L10.646.646zm-1.8 2.908-3.173.793a.5.5 0 0 0-.358.342l-2.57 8.565 8.567-2.57a.5.5 0 0 0 .34-.357l.794-3.174-3.6-3.6z"></path>
									<path fill-rule="evenodd" d="M2.832 13.228 8 9a1 1 0 1 0-1-1l-4.228 5.168-.026.086.086-.026z"></path>
								</svg>
							</a>
						</div>
					</div>
				{% else %}
					<div class="col-2 col-md-1 d-flex flex-row align-items-center p-0">
						<div class="pink-circle">
							<a href="{{ path('app_recruiter_admin_new', {'id': recruiter.id }) }}">
								<svg xmlns="http://www.w3.org/2000/svg" class="logo-admin bi bi-file-earmark-plus" viewbox="0 0 16 16">
									<path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5z"/>
									<path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z"/>
								</svg>
							</a>
						</div>
					</div>

				{% endif %}
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</tbody>
</table>

<a href="{{ path('app_recruiter_new') }}">Create new</a>{% endblock %}
